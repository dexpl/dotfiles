#!/bin/bash

_handle_ac3 () {
	_handle_avi "${1}"
}

_handle_avi () {
	midentify "${1}"
}

_handle_dll () {
	_handle_exe "${1}"
}

_handle_doc () {
	catdoc "${1}"
}

_handle_exe () {
	objdump -x "${1}"
}

_handle_htm () {
	elinks --dump "${1}"
}

_handle_html () {
	_handle_htm "${1}"
}

_handle_md () {
	markdown "${1}" | elinks --dump
}

_handle_mkv () {
	_handle_avi "${1}"
}

_handle_pdf () {
	pdftotext -nopgbrk "${1}" -
}

_handle_rar () {
	if [ $(unrar lb "${1}" | wc -l) -eq 1 ] && [ -n "$(type -t enconv)" ]; then
		unrar p -c- -inul "${1}" | enconv
	else
		unrar l "${1}"
	fi
}

_handle_rtf () {
	unrtf "${1}" | elinks --dump
}

_handle_tar () {
	tar -tf "${1}"
}

_handle_txt () {
	enconv < "${1}"
}

_handle_xls () {
	xls2csv "${1}"
}

_handle_${1##*.} "${1}"
