#!/bin/bash

# Acronym expansion finder
# Requires curl, xpath
# TODO rewrite on Perl entirely since it requires xpath already

url=http://acronyms.silmaril.ie/cgi-bin/xaa?
counter=0
for abbr in $@ ; do
	[ $counter -gt 0 ] && echo
	echo ${abbr}
	curl -s ${url}${abbr} | xpath -e '//acro/expan/text()' -q
	((counter++))
done
